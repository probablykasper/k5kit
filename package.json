{
	"name": "k5kit",
	"version": "0.0.1",
	"description": "Utilities for TypeScript and Svelte",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npx svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && eslint src *.js && prettier --check src *.js && eslint .",
		"format": "prettier --write src *.js && eslint --fix src *.js",
		"release": "npm run lint && npm run build && echo && bash -c 'read -ep \"Enter new version: \" version && read -ep \"Update CHANGELOG.md before continuing (Enter) \" && git add . && npm version --force \"$version\"' && read -ep \"Press enter to publish\" && npm publish && read -ep \"Create a GitHub release with release notes (Enter) && read -ep \"Nice! Press enter to exit\"\""
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./virtual-grid-svelte": {
			"types": "./dist/virtual-grid.svelte.d.ts",
			"svelte": "./dist/virtual-grid.svelte.js"
		},
		"./selection-js": {
			"types": "./dist/selection-js.d.ts",
			"svelte": "./dist/selection-js.js"
		},
		"./selection-svelte": {
			"types": "./dist/selection-svelte.d.ts",
			"svelte": "./dist/selection-svelte.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/package": "^2.3.12",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/vite": "^4.1.11",
		"eslint": "^9.30.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.2.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"svelte": "^5.34.8",
		"svelte-check": "^4.2.2",
		"tailwindcss": "^4.1.10",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0",
		"vite": "^6.3.5"
	},
	"keywords": [
		"svelte",
		"typescript",
		"virtual-grid"
	],
	"prettier": {
		"useTabs": true,
		"printWidth": 100,
		"semi": false,
		"singleQuote": true,
		"plugins": [
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
