{
	"name": "kutils",
	"version": "0.0.1",
	"description": "Utilities for TypeScript and Svelte",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npx svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && eslint src *.js && prettier --check src *.js",
		"format": "prettier --write src *.js && eslint --fix src *.js"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./virtual-grid": {
			"types": "./dist/virtual-grid.d.ts",
			"svelte": "./dist/virtual-grid.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/vite": "^4.1.10",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.3",
		"prettier": "^3.6.1",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"svelte": "^5.34.8",
		"svelte-check": "^4.2.2",
		"tailwindcss": "^4.1.10",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0",
		"vite": "^6.3.5"
	},
	"keywords": [
		"svelte",
		"typescript",
		"virtual-grid"
	],
	"prettier": {
		"useTabs": true,
		"printWidth": 100,
		"semi": false,
		"singleQuote": true,
		"plugins": [
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
